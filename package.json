{
  "name": "hr-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "postinstall": "prisma generate",
    "deploy:vercel": "vercel --prod",
    "deploy:build": "npm run build && npm run db:deploy",
    "deploy:check": "node scripts/check-deployment.js",
    "setup:github": "powershell -ExecutionPolicy Bypass -File scripts/setup-github.ps1",
    "security:audit": "npm audit && prisma validate"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.16.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/fontkit": "^2.0.8",
    "@types/nodemailer": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "fontkit": "^2.0.4",
    "html-to-pdfmake": "^2.5.31",
    "html2canvas": "^1.4.1",
    "jsdom": "^27.0.0",
    "jspdf": "^3.0.2",
    "next": "15.5.3",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.10.1",
    "pdf-lib": "^1.17.1",
    "pdfmake": "^0.2.20",
    "pg": "^8.16.3",
    "prisma": "^6.16.1",
    "react": "19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.19.14",
    "@types/pdfmake": "^0.2.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
