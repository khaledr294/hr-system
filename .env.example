# Database Configuration
DATABASE_URL="your_database_url_here"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Cron Jobs Security (مهم للنسخ الاحتياطي والإشعارات)
CRON_SECRET="your_random_cron_secret_key"

# Redis/Upstash Configuration (اختياري - لتحسين الأداء)
# احصل على القيم من: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="your_upstash_redis_url"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token"

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="نظام إدارة العمالة <no-reply@yourdomain.com>"